@model HotelSystem.Models.Room

<h1>Edit Room</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label for="HotelId">Hotel</label>
        <select asp-for="HotelId" class="form-control" asp-items="@(new SelectList(ViewBag.Hotels, "Id", "Name", Model.HotelId))">
            <option value="">Select Hotel</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Type">Type</label>
        <select asp-for="Type" class="form-control" asp-items="@(new SelectList(ViewBag.RoomTypes))">
            <option value="">Select Room Type</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsAvailable" type="checkbox" class="form-check-input" />
        <label class="form-check-label" for="IsAvailable">Is Available</label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
