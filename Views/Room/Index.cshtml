@model IEnumerable<HotelSystem.Models.Room>

<h2>Rooms</h2>
<a asp-action="Create" class="btn btn-primary">Add New Room</a>
<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Price</th>
            <th>Is Available</th>
            <th>Hotel Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Type</td>
                <td>@room.Price</td>
                <td>@room.IsAvailable</td>
                <td>@room.Hotel?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>