@model IEnumerable<HotelSystem.Models.Hotel>

<h2>Hotels</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Hotel</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Address</td>
                <td>
                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-warning btn-sm w-100">Edit</a>
                        <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-info btn-sm w-100">Details</a>
                        <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-danger btn-sm w-100">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
