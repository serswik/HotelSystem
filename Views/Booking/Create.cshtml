@model HotelSystem.Models.Booking

<h1>Add Booking</h1>

<form asp-action="Add">
    <div class="form-group">
        <label>Guest Name</label>
        <input asp-for="GuestName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Room</label>
        <select asp-for="RoomId" class="form-control" asp-items="@(new SelectList(ViewBag.Rooms, "Id", "Type"))">
            <option value="">Select Room</option>
        </select>
    </div>
    <div class="form-group">
        <label>Check-In Date</label>
        <input asp-for="CheckInDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Check-Out Date</label>
        <input asp-for="CheckOutDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
