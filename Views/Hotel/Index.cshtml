@model IEnumerable<HotelSystem.Models.Hotel>

<h2>Hotels</h2>
<a asp-action="Create" class="btn btn-primary">Add New Hotel</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>