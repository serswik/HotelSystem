@model IEnumerable<HotelSystem.Models.Booking>

<h2>Bookings</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Booking</a>
<table class="table">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Room</th>
            <th>Hotel</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.GuestName</td>
                <td>@booking.Room?.Type</td>
                <td>@booking.Room?.Hotel?.Name</td>
                <td>@booking.CheckInDate.ToShortDateString()</td>
                <td>@booking.CheckOutDate.ToShortDateString()</td>
                <td>
                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-warning btn-sm w-100">Edit</a>
                        <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-info btn-sm w-100">Details</a>
                        <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger btn-sm w-100">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
